<div class="layui-btn-group demoTable">

  <button class="layui-btn layui-btn-danger" id="del" data-type="getCheckData"> <i class="layui-icon">&#xe640;</i> 删除</button>
</div>

<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
<script>
layui.use(['element', 'layer','form','table', 'layedit', 'laydate'], function(){
   var  element = layui.element, layer = layui.layer,form = layui.form ,layedit = layui.layedit
  ,laydate = layui.laydate;
var table = layui.table;

    //监听全选
    form.on('checkbox(selectAll)', function(data){
       // layer.alert(data.elem.checked);

      if (data.elem.checked == true) { 
        $("#selectAll").addClass("layui-btn-danger");
           $(".id").each(function() {       
               this.checked = "checked";
                 form.render('checkbox'); 
            }); 
       } else { 
         $("#selectAll").removeClass("layui-btn-danger");
          $(".id").each(function() { 
             this.checked = false; 
             form.render('checkbox');
          }); 
        } 

    });



});


</script>
<script>
$(function(){
//删除
    var id = [];
      $("#del").click(function(){
            $(".id").each(function() {
            if(this.checked == true){
                 id.push($(this).val()); 
            }
            }); 
             
       if(id.length == 0){
          parent.layer.alert('你没有选中任何分类');
       }else{
           $.ajax({
           type:'post',
           data:{"uid":id},
           dataType:'json',
           url:"{:url('member/del')}",
           success:function(json){
            if(json.code == 0){
              layer.msg(json.msg);
                setTimeout(function(){  //使用  setTimeout（）方法设定定时2000毫秒
                window.location.reload();//页面刷新
            },1000);
            }
           }
        });
       }
  });


});
$("#add").on("click",function(){
  open('{:url("auth/add")}','添加规则','580px','80%');
});


function edit(url){
 parent.layer.open({
          type: 2,
          title: '用户编辑',
          shadeClose: true,
          shade: 0.8,
          area: ['880px', '90%'],
          content: url //iframe的url
        }); 
}

</script>
</body>

</html>
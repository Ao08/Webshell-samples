#admin-main{padding:10px;}
/* 重新定义layUI样式 */
.layui-layout-admin .layui-logo{color: #ffff;}

.layui-form-label{width: 135px;}
.layui-nav .layui-this::after, .layui-nav-bar, .layui-nav-tree .layui-nav-itemed::after{background-color: #3498E1 !important;}
.layui-nav-tree .layui-nav-bar{background-color:#3498E1 !important}
.layui-nav-tree .layui-nav-child dd.layui-this, .layui-nav-tree .layui-nav-child dd.layui-this a, .layui-nav-tree .layui-this, .layui-nav-tree .layui-this > a, .layui-nav-tree .layui-this > a:hover{background-color:#3498E1 !important}
.layui-elem-quote{border-left: 5px solid #3498E1 !important}
/*.layui-this{background: #3498E1 !important;}*/
.layui-tab-brief > .layui-tab-more li.layui-this::after, .layui-tab-brief > .layui-tab-title .layui-this::after{border-bottom: 2px solid #3498E1 !important}
.layui-form-onswitch{border-color:#1E9FFF !important;background-color:#1E9FFF !important;}
.layui-form-item .layui-input-inline{width: 250px;}
.layui-elem-quote{padding: 5px !important;}



/*后台公共样式*/
.w50{width:50px;}
.w100{width:100px;}

.orange{color:#FF5722;}
/*.red{color;}*/
.green{color:#5FB878;}
.blue{color:#1E9FFF;}
/*自定义按钮*/

/* 登陆页面 */
.login-bg{background-color:#393D49}
.login-bg .login-main{border-radius:3px;position: absolute;width:350px;height:auto;left:50%;top:50%; padding:20px;overflow:hidden;
margin-left:-200px;margin-top:-200px;border:1px solid #00F;background-color:#fff}
.login-bg .login-main .login-title{height:50px;line-height:50px;text-align:center;font-size:25px;color:#000;margin-bottom:20px;}
.login-bg .login-main  .layui-form-pane .layui-form-label{width: 40px;}
.login-bg .login-main  .layui-form-pane .layui-input-block{margin-left: 40px;}
.login-bg .login-main i{color:#7e7e7e}
.login-bg  .login-main .login-copyright{height:20px;line-height:20px;color:#7e7e7e;text-align:center;}
.login-bg  .login-main button{font-size:15px;}

/*后台界面样式*/
.form-main{padding:10px;}


/*分页样式*/
#pages{width:100%;}
.pagination{margin:0 auto;width: 460px;text-align:center;overflow: hidden;}
.pagination li{width:36px;height:30px;line-height:30px;text-align:center;float:left;border:1px solid #eee;}
.pagination li a{display:block;}
.pagination .disabled{color:#e2e2e2;border:1px solid #e2e2e2;display:none;}
.pagination li a:hover{color:#1E9FFF;background:#eee;}
.pagination  .active{background-color: #1E9FFF;color:#fff;border-radius: 2px;}
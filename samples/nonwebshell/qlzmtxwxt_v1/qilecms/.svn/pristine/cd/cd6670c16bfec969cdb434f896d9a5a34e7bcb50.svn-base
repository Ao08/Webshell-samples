<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>短信记录</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    {include file="public/css"}
    {include file="public/js"}
</head>
<body>

<span class="layui-breadcrumb">
  <a href="">首页</a>
  <a href="">全局设置</a>
  <a href="">系统设置</a>
  <a><cite>正文</cite></a>
</span>

<blockquote class="layui-elem-quote" style="margin-top:10px;">说明：</blockquote>

{:search('',$select,$one_where,$two_where,$date)}

<div class="layui-form">
  <table class="layui-table" id="demo">
    <colgroup>
      <col width="50">
      <col width="50">
      <col width="200">
      <col width="120">
      <col width="150">
      <col width="100">
      <col width="100">
      <col width="150">
    </colgroup>
    <thead>

      <tr>
        <th><input type="checkbox"  id="selectAll"  lay-skin="primary" lay-filter="selectAll"></th>
        <th>ID</th>
        <th>手机号</th>
        <th>接收用户</th>
        <th>短信码</th>
        <th>发送时间</th>
        <th>状态</th>
        <th>操作</th>
      </tr> 
    </thead>
    <tbody>
{volist name='list' id='vo'}
      <tr>
        <td><input type="checkbox" name="id[]" class="id " title=""  lay-skin="primary" value="{$vo.id}"></td>
        <td>{$vo.id}</td>
         <td>{$vo.mobile}</td>       
        <td><a href="javascript:open('{:url("member/show",array("username"=>$vo["username"]))}','查看用户信息');" >{$vo.username}</a></td>
         <td>{$vo.code}</td>
        <td>{$vo.create_time|date="Y-m-d H:i:s"}</td>
        <td>{if $vo.status==0}<span class="layui-badge layui-bg-gray">等待发送</span>{elseif $vo.status==1}<span class="layui-badge layui-bg-blue">发送成功</span>
        {elseif $vo.status==2 }<span class="layui-badge">发送失败</span>
        {/if}</td>
        <td><div class="layui-btn-group">
          <button class="layui-btn layui-btn-normal layui-btn-xs show"  style="margin-right:10px !important">
           <i class="fa fa-eye" aria-hidden="true"></i> 查看内容
          </button>
         <div class="content" style="display:none">
                {$vo.content}
             </div>
          <button class="layui-btn layui-btn-danger layui-btn-xs del" data-id="{$vo.id}" >
            <i class="layui-icon">&#xe640;</i>删除
          </button>

        </div>
</td>
      </tr>
{/volist}

    </tbody>
  </table>


</div>

<div id="pages">{$page|raw}</div>

<div class="layui-btn-group demoTable">

  <button class="layui-btn layui-btn-danger" id="del" data-type="getCheckData"> <i class="layui-icon">&#xe640;</i> 批量删除</button>
   <button class="layui-btn layui-btn-danger" id="delAll" data-type="getCheckData"> <i class="layui-icon">&#x1002;</i> 清空所有</button>
</div>

<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
<script>
layui.use(['element', 'layer','form','table', 'layedit', 'laydate'], function(){
   var  element = layui.element, layer = layui.layer,form = layui.form ,layedit = layui.layedit
  ,laydate = layui.laydate;
var table = layui.table;

    //监听全选
    form.on('checkbox(selectAll)', function(data){
       // layer.alert(data.elem.checked);

      if (data.elem.checked == true) { 
        $("#selectAll").addClass("layui-btn-danger");
           $(".id").each(function() {       
               this.checked = "checked";
                 form.render('checkbox'); 
            }); 
       } else { 
         $("#selectAll").removeClass("layui-btn-danger");
          $(".id").each(function() { 
             this.checked = false; 
             form.render('checkbox');
          }); 
        } 

    });



});


</script>
<script>
$(function(){
//全选删除
      var id = [];
      $("#del").click(function(){
            $(".id").each(function() {
            if(this.checked == true){
                 id.push($(this).val()); 
            }
            });              
       if(id.length == 0){
          parent.layer.alert('你没有选中任何分类');
       }else{

                    //询问框
              parent.layer.confirm('您确定要批量删除吗？', {
              btn: ['确定','取消'],
              title:'批量删除提示' //按钮
            }, function(index){
             //确定
                layer.close(index);
                             $.post("{:url('smsLog/del')}"
                        ,{"id":id}        
                       ,function(json){
                        if(json.code == 0){
                            layer.msg(json.msg);
                                 setTimeout(function(){ 
                                 window.location.reload();  //页面刷新
                                 },1000);
                             }
                    });

            }, function(){

            });

       }
  });



});

</script>
<!-- 查看邮件内容 -->
  <script>
$(function(){
 $(".show").on("click",function(){
  var content = $(this).next(".content").text();
        //页面层
    parent.layer.open({
      type: 1,
      title:"查看邮件内容",
      skin: 'layui-layer-rim', //加上边框
      area: ['750px', '60%'], //宽高
      content: content
     });
 });
  
});

  </script>

<!-- 单个删除 -->
<script>
$(function(){
 $(".del").on("click",function(){
 var id = $(this).attr('data-id');
    layer.msg('您确定要删除吗？', {
      time: 0 //不自动关闭
      ,btn: ['确定', '取消']
      ,yes: function(index){
        layer.close(index);
              $.post('{:url("smsLog/del")}',{"id":id},function(json){
                      if(json.code == 0){
                        layer.msg(json.msg);
                        setTimeout(function(){  //使用  setTimeout（）方法设定定时2000毫秒
                        window.location.reload();//页面刷新
                      },1000);
                  }
                 });
       }
    });
  
  });
});

</script>
<script>
$(function(){
 $("#delAll").on("click",function(){  

    layer.msg('清空所有邮件？', {
      time: 0 //不自动关闭
      ,btn: ['确定', '取消']
      ,yes: function(index){
        layer.close(index);
       $.post("{:url('smsLog/delAll')}"
                        ,{"type":"all"}        
                       ,function(json){
                        if(json.code == 0){
                             layer.msg(json.msg);
                                 setTimeout(function(){ 
                                 window.location.reload();  //页面刷新
                                 },500);
                             }
                    });
       }
    });


  
  });
});
</script>
</body>

</html>
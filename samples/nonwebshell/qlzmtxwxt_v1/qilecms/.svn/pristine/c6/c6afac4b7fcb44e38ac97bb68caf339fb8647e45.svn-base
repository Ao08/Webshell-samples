<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>添加分类</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    {include file="public/css"}
    {include file="public/js"}
</head>
<body>

<div class=""  style="padding:20px">
{form:iframe name="m-iframe" }
<form class="layui-form" action="" method="post" target="m-iframe">
<input type="hidden" name="pid" value="{$pid}">
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;"> 上级分类</label>
                <div class="layui-input-inline">
                 
<div class="layui-form-mid"> {if $pname}{$pname}{else /}顶级分类{/if}</div>
               
                </div>
            
              </div>
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;"> 分类名称</label>
                <div class="layui-input-inline">
                  <input type="text" name="cname" lay-verify="cname" autocomplete="off" placeholder="" class="layui-input">
                </div>
                 <div class="layui-form-mid layui-word-aux"><span class="orange">*</span> 必填</div>
              </div>


              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;">字母缩写</label>
                <div class="layui-input-inline">
                  <input type="text" name="abbr" lay-verify="abbr" autocomplete="off" placeholder="" class="layui-input">
                </div>
                  <div class="layui-form-mid layui-word-aux"><span class="orange">*</span> 必填<br></div>
                    <div class="layui-form-mid layui-word-aux">  {:about('建议使用英文首字母缩写，或者中文首字母缩写，用于前台url显示')}</div>
                 
                
              </div>
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;">SEO标题</label>
                <div class="layui-input-inline">
                  <input type="text" name="seotitle" lay-verify="seotitle" autocomplete="off" placeholder="" class="layui-input">
                </div>
              </div>
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;">SEO关键词</label>
                <div class="layui-input-inline">
                  <input type="text" name="keywords" lay-verify="keywords" autocomplete="off" placeholder="" class="layui-input">
                </div>
              </div>
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;">SEO描述</label>
                <div class="layui-input-inline">
                  <textarea name="description" lay-verify="condition" autocomplete="off" placeholder="" class="layui-textarea"></textarea>
                </div>
                   <div class="layui-form-mid layui-word-aux"></div>
              </div>
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;">排序</label>
                <div class="layui-input-inline">
                <input type="text" class="layui-input"  name="sort"  value="0">
                </div>
              </div>
              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;">状态</label>
                <div class="layui-input-inline">
                <input type="checkbox" class="status"  name="status" lay-skin="switch"  lay-filter="switchTarget" checked lay-text="显示|隐藏">
                </div>
              </div>

              <div class="layui-form-item">
                <label class="layui-form-label" style="width:100px;"></label>
                <div class="layui-input-inline">
                   <button class="layui-btn layui-btn-normal"  lay-submit lay-filter="form">确 定</button>
                </div>
              </div>


</form>
</div>

<script>
layui.use(['element', 'layer','form'], function(){
   var  element = layui.element, layer = layui.layer,form = layui.form;
  // //监听导航点击
  // element.on('nav(nav)', function(elem){
  // console.log(elem);
  //   // layer.msg(elem.index());
  // });
 //监听提交
  form.on('submit(form)', function(data){
    $.post("{:url('article/categoryAdd')}",$("form").serialize(),function(json){
          if(json.code == 0){
            layer.msg(json.msg);
           $("form")[0].reset();
      
          }else{
            layer.msg(json.msg);
          }
    });

  });
});

</script>
<script>

</script>
</body>

</html>